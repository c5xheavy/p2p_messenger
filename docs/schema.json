{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://example.com/message.schema.json",
    "title": "Message",
    "description": "Message sent from sender to recipient",
    "type": "object",
    "properties": {
        "senderIp": {
            "description": "IP of message sender",
            "type": "string"
        },
        "time": {
            "description": "Unix time of sending the message",
            "type": "number"
        },
        "message": {
            "description": "Text of message",
            "type": "string"
        }
    },
    "required": [ "senderIp", "time", "message" ]
}
